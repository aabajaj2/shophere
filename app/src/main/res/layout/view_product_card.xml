            <!--android:gravity="center"-->
            <!--android:textSize="36sp"-->
            <!--android:text="@{pvm.name}"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_centerInParent="true"/>-->


    </android.support.v7.widget.CardView>


</layout>