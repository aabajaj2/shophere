<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pvm"
            type="com.example.anjanibajaj.shophere.viewModel.ProductViewModel" />
    </data>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="50dp"
        app:elevation = "50dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:onClick="@{pvm.productCardClicked()}">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="183dp"
                android:layout_height="146dp"
                app:srcCompat="@android:drawable/picture_frame"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="3dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                app:image = "@{pvm.imageUrl}"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintVertical_bias="0.0"
                android:contentDescription="@string/product_image" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="95dp"
                android:layout_height="27dp"
                android:text="@={pvm.name}"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintHorizontal_bias="0.097"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="71dp"
                android:layout_height="27dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:text="@{pvm.price}"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                card_view:layout_constraintLeft_toRightOf="@+id/textView3"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintHorizontal_bias="0.8" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</layout>